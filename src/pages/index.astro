<script>
  import {gsap} from "gsap"

  let tl = gsap.timeline()
  tl.fromTo(".text", {opacity: 0, y: 50}, {opacity: 1,y: 0,ease: "power3.out" ,duration: 1})
  .fromTo(".illustration", {opacity: 0, y: 50}, {opacity: 1, y: 0, duration: 1, ease: "power3.out"}, "-=0.5")

  gsap.to('#ghost', {
    y: 10,
    duration: 1,
    repeat: -1,
    yoyo: true,
    ease: 'none',
  })
  gsap.to('#lofistar', {
    rotate: 10,
    scale: .8,
    ease: 'none',
    repeat: -1,
    yoyo: true,
    duration: 1
  })
  gsap.to('#lofistar-2', {
    rotate: -10,
    scale: .8,
    ease: 'none',
    repeat: -1,
    yoyo: true,
    duration: 1
  })
  gsap.to('#lofistar-3', {
    rotate: 10,
    scale: .8,
    ease: 'none',
    repeat: -1,
    yoyo: true,
    duration: 1
  })
  gsap.to('#star-1',{
    rotation: -20,
    repeat: -1,
    yoyo: true,
    duration: 2,
    repeatDelay: 3
  })
  gsap.to('#star-2',{
    rotation: 20,
    repeat: -1,
    yoyo: true,
    duration: 2,
    repeatDelay: 3

  })
  gsap.to('#star-3',{
    y: -20,
    repeat: -1,
    yoyo: true,
    duration: 2,
    repeatDelay: 3

})
</script>
