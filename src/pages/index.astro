    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 py-14">
      <div class="text">
        <h1 class="font-creepster lg:max-w-[684px] max-w-[400px] xl:text-7xl lg:text-6xl text-4xl font-bold uppercase text-text leading-snug lg:leading-snug xl:leading-snug text-pretty mb-4 relative">
          <div class="absolute -top-12 right-0">
            <div class="relative">
              <Ghost />
              <LofiStar class="-top-10 right-0" />
              <LofiStar2 class="bottom-0 -left-10" />
              <LofiStar3 class="-bottom-4 -right-10" />
            </div>
          </div>
