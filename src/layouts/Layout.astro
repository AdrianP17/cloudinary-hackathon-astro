---
import '@fontsource/creepster';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../css/main.css';
interface Props {
	title: string;
}
import Web from '../media/WebMedia.astro';
import Web2 from '../media/WebMedia4.astro';
import Elipse from '../media/Ellipse.png';
import Image from 'astro/components/Image.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Agrega un toque espeluznante a tus fotos, conviértete en una criatura de Halloween y agrega un fondo tenebroso. Utiliza la tecnología de Cloudinary para subir tus fotos." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/eye.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-bg relative min-h-screen font-sans">
	<audio class="audio" src="/halloween-bgmusic.mp3" loop hidden onplay="console.log('playing')"></audio>
		<div >
			<Web class='top-0 left-0 pointer-events-none' />
			<Header />
			<slot />
			<Footer />
			<Image src={Elipse} width={200} loading={"lazy"}
			height={400}
			widths={[60, 120, 720, Elipse.width]}
			sizes={`(max-width: 360px) 60px, (max-width: 720px) 200px, (max-width: 1200px) 720px, ${Elipse.width}px`}
			alt="Elipse" class="sm:hidden absolute -z-10 bottom-0 left-10" />
			<Image src={Elipse} width={1000} loading={"lazy"}
			height={1000}
			widths={[60, 120, 720, Elipse.width]}
			sizes={`(max-width: 360px) 60px, (max-width: 720px) 200px, (max-width: 1200px) 720px, ${Elipse.width}px`}
			alt="Elipse" class="hidden sm:block absolute -z-10 bottom-0 left-10" />
			<Web2 class='bottom-0 right-0 -z-10 w-fit' />
		</div>
	</body>
</html>
